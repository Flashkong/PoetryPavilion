<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="5dp"
            android:text="@string/choose_a_way"
            android:textColor="#666666"
            android:textSize="16sp"
            android:focusable="true"
            tools:ignore="RtlSymmetry" />



        <TextView
            android:id="@+id/edit_user_info_dialog_camera_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/edit_user_info_dialog_camera"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/Take_a_photo"
            android:textColor="#666666"
            android:textSize="14sp"
            android:focusable="true" />

        <View
            android:layout_marginStart="52dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/edit_user_info_dialog_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/edit_user_info_dialog_photo"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/select_from_photos"
            android:textColor="#666666"
            android:textSize="14sp"
            android:focusable="true" />

        <View
            android:layout_marginStart="52dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/edit_user_info_dialog_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/edit_user_info_dislog_cancel"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/cancel"
            android:textColor="#666666"
            android:textSize="14sp"
            android:focusable="true" />

        <View
            android:layout_marginStart="52dp"
            android:layout_marginBottom="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
</layout>
