<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/poem_board_concision_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/poem_board_concision_poem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/poem_board_concision_user_uplode_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="10dp"
            android:id="@+id/poem_board_concision_poem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poem_board_concision_userhead_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/default_user_head_img"
                app:civ_border_width="1dp"
                android:layout_centerVertical="true"
                app:civ_border_color="@color/white"/>

            <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/poem_board_concision_userhead_img"
                android:id="@+id/poem_board_concision_username"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_toEndOf="@id/poem_board_concision_userhead_img"
                android:layout_marginStart="8dp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>