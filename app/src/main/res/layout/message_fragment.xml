<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_message_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabHight"
            app:tabBackground="@color/colorTheme"
            app:tabMode="fixed"
            app:tabIndicatorHeight="@dimen/tabLineHigh"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/colorThemeLight" />

        <View
            android:layout_height="@dimen/tabBottomMargin"
            android:background="@color/colorTheme"
            android:layout_width="match_parent"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_message_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>
</layout>